<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:local="clr-namespace:KSITurnamentManagement"
             xmlns:turnament="clr-namespace:TournamentManagement;assembly=TurnamentManagement"
             x:Class="KSITurnamentManagement.MainPage"
             x:DataType="local:MainPageViewModel">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Turnaments"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
            

                <ListView ItemsSource="{Binding Turnaments}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="turnament:ITournament">
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="10">
                                <Label Text="{Binding Name}" FontSize="20" VerticalOptions="Center" />
                                <Label Text="Test" FontSize="20" VerticalOptions="Center" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
